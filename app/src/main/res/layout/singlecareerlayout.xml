<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true"
    android:outlineAmbientShadowColor="@color/app_primarycolor"

    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_8sdp"
        android:background="@color/light_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_careertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:paddingStart="@dimen/_12sdp"
            android:text="Career type"
            android:textColor="@color/app_primarycolor"
            android:textSize="@dimen/_14sdp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray">

            <TextView
                android:id="@+id/txt_birthplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/nunito_sans"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Debut" />

            <TextView
                android:id="@+id/tv_birthplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_birthplace"
                android:background="@color/light_gray"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/nunito_sans"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Debut to place here"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_battingstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_birthplace"
                android:layout_marginTop="@dimen/_1sdp"
                android:textColor="@color/app_primarycolor"
                android:background="@color/light_gray"
                android:fontFamily="@font/nunito_sans"
                android:textStyle="bold"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Last Played" />

            <TextView
                android:id="@+id/tv_battingstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_birthplace"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toRightOf="@+id/txt_battingstyle"
                android:background="@color/light_gray"
                android:fontFamily="@font/nunito_sans"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Last Played to place here"
                android:textColor="@color/black" />


        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>