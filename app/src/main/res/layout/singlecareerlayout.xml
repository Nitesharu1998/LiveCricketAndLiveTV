<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_careertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans"
        android:text="Career type"
        android:textColor="@color/dark_gray" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:cardCornerRadius="@dimen/_24sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_birthplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:fontFamily="@font/nunito_sans"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Debut" />

            <TextView
                android:id="@+id/tv_birthplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_birthplace"
                android:background="@color/light_gray"
                android:fontFamily="@font/nunito_sans"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Debut to place here"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_battingstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_birthplace"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:fontFamily="@font/nunito_sans"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Last Played" />

            <TextView
                android:id="@+id/tv_battingstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_birthplace"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toRightOf="@+id/txt_battingstyle"
                android:background="@color/light_gray"
                android:fontFamily="@font/nunito_sans"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingStart="@dimen/_12sdp"
                android:text="Last Played to place here"
                android:textColor="@color/black" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>