<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_player"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_8sdp">

    <TextView
        android:id="@+id/tv_playercount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1."
        android:textColor="@color/purple_700" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_uploaderimg"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        android:layout_toRightOf="@+id/tv_playercount"
        app:cardCornerRadius="@dimen/_50sdp">

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_applogo" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_playername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_toRightOf="@+id/cv_uploaderimg"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Test player name"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_playercountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_playername"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_toRightOf="@+id/cv_uploaderimg"
        android:text="Test player name"
        android:textColor="@color/gray" />


</RelativeLayout>