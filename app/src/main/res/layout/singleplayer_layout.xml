<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_player"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:layout_marginVertical="@dimen/_2sdp"
    android:orientation="horizontal">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:layout_marginEnd="@dimen/_2sdp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_playercount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="@dimen/_12sdp"
                android:text="1."
                android:textColor="@color/dark_gray" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="@dimen/_2sdp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_gray"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_player"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_applogo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_playername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_toRightOf="@+id/cv_uploaderimg"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Test player name"
                    android:textColor="@color/app_primarycolor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_playercountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_playername"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_toRightOf="@+id/cv_uploaderimg"
                    android:text="Test player name"
                    android:textColor="@color/app_primarycolor" />


            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>





</LinearLayout>